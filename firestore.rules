rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User Profiles
    match /users/{userId} {
      // Anyone can read a user profile (needed for matching/reviewing)
      allow read: if request.auth != null;
      // Users can create their own profile, but cannot set themselves as ADMIN or VERIFIED
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.type != 'ADMIN'
                    && request.resource.data.verified != true;
                    
      // Users can update their own profile, but cannot change their type to ADMIN or verify themselves
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['type', 'verified']) 
                        || (request.resource.data.type == resource.data.type && request.resource.data.verified == resource.data.verified));
                        
      // Admins can update/verify profiles
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'ADMIN';
    }

    // Deals (Structures & Requests)
    match /deals/{dealId} {
      allow read: if request.auth != null; // SMEs, Funders need to see these
      // SMEs can create deals involving themselves
      allow create: if request.auth != null 
                    && request.resource.data.smeId == request.auth.uid 
                    && request.resource.data.amount > 0;
      // Funders can update deals to secure them
      allow update: if request.auth != null 
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'FUNDER';
    }

    // RFQs (Quote Requests)
    match /rfqs/{rfqId} {
      allow read: if request.auth != null;
      // SMEs create RFQs
      allow create: if request.auth != null && request.resource.data.smeId == request.auth.uid;
      // SMEs and Suppliers can update (Suppliers append quotes, SMEs change status)
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.smeId == request.auth.uid;
    }
    
    // Notifications
    match /user_notifications/{userId} {
      // Users can read/write their own notifications.
      // Admins and Funders can read/write notifications for ANY user.
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type in ['ADMIN', 'FUNDER']
      );
    }

    // Compliance Documents
    match /user_documents/{docId} {
      allow read: if request.auth != null; // Needed for Admin & Funders to review
      // Users can only upload their own docs
      allow create, update, delete: if request.auth != null && request.auth.uid == docId.split('_')[0];
    }

    // System Config
    match /system_config/{configId} {
      allow read: if true; // Public configs (categories, etc.)
      // Only admins can update the platform configuration
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'ADMIN';
    }
  }
}
